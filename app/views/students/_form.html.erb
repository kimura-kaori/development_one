<%= form_with(model:[user, student], url:selection_new_or_edit, local: true) do |form| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <p class="error"><%= student.errors.count %>件のエラーがあります。</p>
      <ul>
        <% student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <section class="section">
    <div class="container">
      <div class="columns is-centered">
        <label for="formGroup1" class="form-label"><%= form.label :student_furigana, t("activerecord.attributes.student.student_furigana"), class: "label" %></label>
        <input type="text_field" placeholder="やまだ はなこ" class="form-control w20" id="formGroup1" <%= form.text_field :student_furigana %>
      <div class="column is-6">
        <label for="formGroup2" class="form-label"><%= form.label :student_name, t("activerecord.attributes.student.student_name"), class: "label" %></label>
        <input type="text_field" placeholder="山田 花子" class="form-control w20" id="formGroup2" <%= form.text_field :student_name %>

        <!-- <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="radio2" id="radio2a" <%= form.text_field :sex %>>
          <label class="form-check-label" for="radio2a">男</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="radio2" id="radio2b" <%= form.text_field :sex %>>
          <label class="form-check-label" for="radio2b">女</label>
        </div> -->

      <div class="column is-6">
        <label for="formGroup3" class="form-label"><%= form.label :sex, t("activerecord.attributes.student.sex"), class: "label" %></label>
        <input type="text_field" placeholder="女"  class="form-control w20" id="formGroup3" <%= form.text_field :sex %>

      <div class="column is-6">
        <label for="formGroup4" class="form-label"><%= form.label :birthday, t("activerecord.attributes.student.birthday"), class: "label" %></label>
      <div class="birthday_field">
      <%= raw sprintf(
                form.date_select(
                  :birthday,
                  use_month_numbers: true,
                  start_year: 1930,
                  end_year: (Time.now.year - 5),
                  default: Date.new(1989, 1, 1),
                  date_separator: '%s'),
                '年 ', '月 ') + '日' %>

      <div class="column is-6">
        <label for="formGroup5" class="form-label"><%= form.label :telephone, t("activerecord.attributes.student.telephone"), class: "label" %></label>
        <input type="text_field" placeholder="075-000-0000" class="form-control w20" id="formGroup5" <%= form.text_field :telephone %>

      <div class="column is-6">
        <label for="formGroup6" class="form-label"><%= form.label :cellphone, t("activerecord.attributes.student.cellphone"), class: "label" %></label>
        <input type="text_field" placeholder="090-000-0000" class="form-control w20" id="formGroup6" <%= form.text_field :cellphone %>

      <div class="column is-6">
        <label for="formGroup7" class="form-label"><%= form.label :post_code, t("activerecord.attributes.student.post_code"), class: "label" %></label>
        <input type="text_field" placeholder="000-0000" class="form-control w20" id="formGroup7" <%= form.text_field :post_code %>

      <div class="column is-6">
        <label for="formGroup8" class="form-label"><%= form.label :address, t("activerecord.attributes.student.address"), class: "label" %></label>
        <input type="text_field" placeholder="京都府京都市中京区御所南1234" class="form-control w40" id="formGroup8" <%= form.text_field :address %>

      <div class="column is-6">
        <label for="formGroup9" class="form-label"><%= form.label :parents_furigana, t("activerecord.attributes.student.parents_furigana"), class: "label" %></label>
        <input type="text_field" placeholder="やまだ たかし" class="form-control w20" id="formGroup9" <%= form.text_field :parents_furigana %>

      <div class="column is-6">
        <label for="formGroup10" class="form-label"><%= form.label :parents_name, t("activerecord.attributes.student.parents_name"), class: "label" %></label>
        <input type="text_field" placeholder="山田 隆" class="form-control w20" id="formGroup10" <%= form.text_field :parents_name %>

      <div class="column is-6">
        <label for="formGroup11" class="form-label"><%= form.label :relationship, t("activerecord.attributes.student.relationship"), class: "label" %></label>
        <input type="text_field" placeholder="父" class="form-control w20" id="formGroup11" <%= form.text_field :relationship %>

      <div class="actions">
        <%= form.submit class: "button" ,class: "btn btn-outline-success" %>
      </div>
<% end %>
