<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>生徒名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>

        <td><%= student.student_name %></td>
        <td><%= button_to '詳細', student %></td>
        <td><%= button_to '編集', edit_student_path(student) %></td>
        <td><%= button_to '削除', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'マイページ', mypage_students_path %>
<%= link_to '新規生徒登録', new_student_path %>
