<h1>Emergency Contacts</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Relationship</th>
      <th>Contact address</th>
      <th>Telephone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_emergency_contacts.each do |emergency_contact| %>
      <tr>
        <td><%= emergency_contact.name %></td>
        <td><%= emergency_contact.relationship %></td>
        <td><%= emergency_contact.contact_address %></td>
        <td><%= emergency_contact.telephone %></td>

        <td><%= link_to 'Show', student_emergency_contact_path(@student.id,emergency_contact.id) , class: "btn btn-outline-success"%></td>
        <td><%= link_to 'Edit', edit_student_emergency_contact_path(@student.id,emergency_contact.id), class: "btn btn-outline-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Emergency Contact', new_student_emergency_contact_path , class: "btn btn-outline-success"%>
