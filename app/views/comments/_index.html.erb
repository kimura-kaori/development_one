<table class="table table-striped">
  <tbody>
  <% comments.each do |comment| %>
    <tr>
      <% if @user.students.first.parents_name.present? %>
        <td><%= @user.students.first.parents_name %>さん</td>
      <% else %>
        <td><%= 京都東中学校 %></td>
      <% end %>
    </tr>
    <tr>
      <% if comment.id.present? %>
        <td><%= comment.content %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
